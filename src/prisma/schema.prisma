datasource db {
    provider = "mongodb"
    url      = env("DB_URL")
}

generator client {
    provider = "prisma-client-js"
}

model user {
    id                 String   @id @default(auto()) @map("_id") @db.ObjectId
    email              String   @unique
    preferredFirstName String
    firstName          String
    lastName           String
    password           String
    createAt           DateTime @default(now())
    updateAt           DateTime @updatedAt
}
